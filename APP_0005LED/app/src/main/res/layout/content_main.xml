        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="182dp" />

    <CheckBox
        android:id="@+id/LED2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED2"
