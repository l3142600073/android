        tools:layout_editor_absoluteY="131dp" />

    <Button
        android:id="@+id/BUTTON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL ON"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="266dp" />

    <CheckBox
        android:id="@+id/LED1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
