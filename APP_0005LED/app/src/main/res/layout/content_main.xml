        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="182dp" />

    <CheckBox
        android:id="@+id/LED3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED3"
        android:onClick="onCheckboxClicked"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="182dp" />

    <CheckBox
        android:id="@+id/LED4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED4"
        android:onClick="onCheckboxClicked"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="182dp" />

</LinearLayout>